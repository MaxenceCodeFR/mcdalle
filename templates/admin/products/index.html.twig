{% extends "base.html.twig" %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
        {% include "commons/_admin_menu.html.twig" %}
            <main class="col-9 border border-light bg-light p-3">
                <h1>Liste des produits</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Images</th>
                            <th>Categorie</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{product.id }}</td>
                                <td>{{product.name }}</td>
                                <td>{{product.price }}$ </td>
                                <td><img src="{{ asset('assets/uploads/' ~ product.images) }}" class="w-25 " alt="{{product.name}}"></td>
                                {# Note a soi même : 
                                Dans une entité, si le nom de propriété contient un underscore
                                cela ne fonctionnera pas car les propriété sont converties
                                de snake_case à camelCase #}
                                <td>{{product.categoriesId.name }}</td>
                                <td><a href="{{ path('admin_edit', {id:product.id})}}" class="btn btn-warning">Editer</a>
                                    <div class="form-text">Attention modifications reservées à l'administrateur produits </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}