{% block body %}
<h1 class="text-light mb-5"> Choisissez votre boisson </h1>
<div class="container">
    <div class="row">
        {% for product in products %}
        <div class="col-md-3">
            <div class="card text-bg-dark cardMainCourse h-100">
                <div class="overlay"></div>
                <img src="{{ asset('assets/uploads/' ~ product.images) }}" alt="{{ product.name }}">
                <div class="card-img-overlay z-3">
                    <h2 class="card-title">{{ product.name }}</h2>
                    <p class="card-text">{{ product.price }}$</p>
                    <p class="card-text"><small>Last updated 3 mins ago</small></p>
                    <a href="{{ path('cart_add_drink', {id:product.id})}}" class="btn btn-danger card-link w-100">Ajouter au panier</a>
                    <a href="{{ path('drinks_details', { id: product.id }) }}" class="card-link">DÃ©tail du produit</a>
                </div>
            </div>
        </div>
        {% if loop.index is divisible by(4) %}
            </div><div class="row">
        {% endif %}
        {% endfor %}
    </div>
</div>
<a href="{{ path('drinks')}}" class=" btn btn-success m-5 "> Retour au Boissons</a>
{% endblock %}
