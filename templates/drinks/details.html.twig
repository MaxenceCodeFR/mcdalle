{% extends "base.html.twig" %}
{% block title %}Détail du produit{% endblock %}
{% block body %}
<h1 class="titleDetails">Détail du produit</h1>

<div class="d-flex details text-light">
    <div class="detailsNamePrice">
        <h3>{{ products.name }}</h3>

        <p>{{ products.price }} $</p>
    </div>
    <div class="detailsAllergens">
        <h4> 
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="red" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            </svg>
        Allergènes :
        </h4>
        <ul>
            {% for allergen in products.allergens %}
                <li>{{ allergen.name }}</li>
            {% endfor %}
        </ul>
    </div>
</div>

<a href="{{ path('drinks_subcategory', {'id': products.getCategoriesId().id}) }}" class="btn btn-success">Retour aux produits</a>


{% endblock %}